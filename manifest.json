{
    "manifest_version": 2,
    "name": "video time",
    "description": "get the current time of youtube video",
    "version": "0.1",
    "background": {
        "scripts": ["background.js", "pinpoint-app.js"],
        "persistent": true
    },
    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },
    "content_scripts": [{
      "matches": ["http://www.youtube.com/watch*"],
      "js": ["content.js", "popup.js", "pinpoint-note.js"]}],
    "permissions": [
        "storage",
        "tabs",
        "http://*/*",
        "https://*/*"
    ]
}
